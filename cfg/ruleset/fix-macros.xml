	<!--
		colsep-invalid - For all elements, @colsep where it exists, must be 1 or 0.
	-->
	<macrodef name="colsep-invalid">	
		<attribute name="file"/>
		<attribute name="path"/>
		<sequential>
			<delete-attribute file="@{file}" path="@{path}" attr="colsep"/>
		</sequential>
	</macrodef>
