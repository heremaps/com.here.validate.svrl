<!DOCTYPE topic PUBLIC "-//OASIS//DTD DITA Topic//EN" "topic.dtd">
<topic id="rowsep-invalid">
	<title>rowsep-invalid</title>
  <body>
    <p>
      &lt;table&gt; 'rowsep' attribute can be only 0 or 1
    </p>
    <section id="table-with-good-rowsep">
      <title>Good Table</title>
      <table id="table-good" rowsep="1">
        <tgroup cols="1">
          <colspec colname="c1" colnum="1" colwidth="336pt"/>
          <tbody>
            <row>
              <entry>&#xA0;</entry>
            </row>
          </tbody>
        </tgroup>
      </table>

    </section>
    <section id="table-with-bad-rowsep">
      <title>Bad Table</title>
        <table id="table-bad" rowsep="0.1">
        <tgroup cols="1">
          <colspec colname="c1" colnum="1" colwidth="336pt"/>
          <tbody>
            <row>
              <entry>&#xA0;</entry>
            </row>
          </tbody>
        </tgroup>
      </table>
    </section>
  </body>
</topic>